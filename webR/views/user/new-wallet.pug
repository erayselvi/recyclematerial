extends ../layouts/main-layout.pug
block content            
    .container-lg.my-4.border.border-2.rounded-3 

        form.mx-2(action='/user/new-wallet' method='POST')
                .form-group.my-3
                    label.form-label(for='tWalletInput') KURTARMA KODU GİRİNİZ (Sizin için otomatik oluşturulacaktır. Özelleştirebilirsiniz. Lütfen yedeklemeyi unutmayınız )
                    .mb-3
                        textarea#tWalletInput.form-control(rows="3" name="recoverycode") #{datems} #{name} #{sname} #{date} #{datems2}
                    small#walletHelp.form-text.text-muted Kurtarma kodu kaybedilmesi sonucu sorumluluk size aittir!
                .form-group.my-3
                    label(for='tRCoin') Cüzdan Şifresi Belirleyiniz
                    input#tRCoin.form-control(placeholder='Giriniz...' name='walletpassword')
                .form-check.my-3
                    input#exampleCheck1.form-check-input(type='checkbox')
                    label.form-check-label(for='exampleCheck1') Onaylıyorum
                button.btn.btn-success.mb-3(type='submit' name="nwsubmit") Gönder
    H2 Oluşturulan Wallet Id: #{walletid}            